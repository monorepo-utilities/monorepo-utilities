{
  "name": "@monorepo-utilities/install-dependencies",
  "version": "0.1.8",
  "description": "Builds node modules to a spectified path ðŸ“¦",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "install-dependencies": "./dist/index.js",
    "ideps": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts --config ../../.eslintrc",
    "lint:fix": "eslint src/**/*.ts --config ../../.eslintrc --fix",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "version": "shx sed -i \"s/VERSION/$npm_package_version/\" dist/program.js"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "cosmiconfig": "^7.0.1",
    "fast-glob": "^3.2.11",
    "lilconfig": "^2.0.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "yowainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "homepage": "https://github.com/yowainwright/monorepo-utilities#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/monorepo-utilities.git"
  },
  "bugs": {
    "url": "https://github.com/yowainwright/monorepo-utilities/issues"
  },
  "keywords": [
    "build",
    "dependency-management",
    "environment",
    "installing",
    "monorepos",
    "multi-repos",
    "node-apps",
    "node-services",
    "package-management",
    "services"
  ],
  "devDependencies": {
    "fs-extra": "^10.1.0"
  }
}
