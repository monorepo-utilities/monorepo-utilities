{
  "name": "@monorepo-utilities/root",
  "version": "0.0.1",
  "description": "Utilities for monorepo development",
  "main": "README.md",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-lerna-scopes": "^17.0.2",
    "@commitlint/prompt": "^17.0.3",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.4.0",
    "tsutils": "^3.21.0",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1"
  },
  "repository": "git@github.com:yowainwright/monorepo-utilities.git",
  "author": "yowainwright <yowainwright@gmail.com>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "install-dependencies",
          "list-packages-by-directory"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "engines": {
    "pnpm": ">=7",
    "node": ">=16.0.0"
  }
}
